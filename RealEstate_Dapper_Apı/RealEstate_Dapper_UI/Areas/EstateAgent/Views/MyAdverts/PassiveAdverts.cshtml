
@{
    ViewData["Title"] = "PassiveAdverts";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yayınladığınız İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>

                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Aktif Yap</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="col">@item.ProductID</th>
                                    <th>@item.Title</th>
                                    <th>@item.CategoryName</th>
                                    <th>@item.Price</th>
                                    <th>@item.Type</th>
                                    <th><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></th>
                                    <th><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-dark">Aktif Yap</a></th>
                                    <th><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></th>
                                    <th><a href="/Product/ProductDetail/@item.ProductID" class="btn btn-outline-info">Sitede Gör</a></th>

                                </tr>
                            }

                        </tbody>

                    </table>
                    <a href="/Product/CreateProduct" class="btn btn-outline-info"> Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>



@model List<ResultCategoryDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
}
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Responsive Table</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>

							<tr>
								<th scope="col">#</th>
								<th scope="col">First Name</th>
								<th scope="col">Last Name</th>
								<th scope="col">Email       </th>
								<th scope="col">Country</th>



							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{

								<tr>
									<th scope="col">@item.CategoryID</th>
									<th>@item.CategoryName</th>
									<th>@item.CategoryStatus</th>
									<th><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></th>
									<th><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></th>
								</tr>
							}

						</tbody>

					</table>
					<a href="/Category/CreateCategory" class="btn btn-outline-info"> Yeni kategori</a>
				</div>
			</div>
		</div>
	</div>
</div>
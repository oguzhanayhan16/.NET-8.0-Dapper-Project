@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<style>
    img{
        border-radius:50px;
    }

</style>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>

                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="col">@count</th>
                                    <th><img src="@item.ImageUrl" style="height:50px;width:50px;" />   @item.CityName</th>
                                    <th><a href="/PopulerLocation/DeletePopularLocation/@item.LocationID" class="btn btn-outline-danger">Sil</a></th>
                                    <th><a href="/PopulerLocation/UpdatePopularLocation/@item.LocationID" class="btn btn-outline-success">Güncelle</a></th>
                                </tr>
                            }

                        </tbody>

                    </table>
                    <a href="/PopulerLocation/CreatePopularLocation" class="btn btn-outline-info"> Yeni Popüler Lokasyon Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
